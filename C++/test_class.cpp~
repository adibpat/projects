#include <iostream>
#include <stdlib>

/************************************
 * Some Experimentation with classes*
 ************************************/
class Date {
    int d, m, y;
    //static Date default_date;
public:
    Date(int dd=0, int mm=0, int yy=0);
    void print_date();
};
Date::Date (int dd, int mm, int yy)
{
    d = dd;
    m = mm;
    y = yy;
}

Date::print_date ()
{
    cout<< "The date is " << d << "/" << m << "/" << y << endl;
}
int main ()
{
    Date my_bday(15,09,1992);
    my_bday.print_date();
}
